<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="특수사업부 MS 그룹"
        android:textColor="#000000"
        android:textSize="30px" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textColor="#ff0000"
        android:textSize="30px" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/department"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="30px" />

    <EditText
        android:id="@+id/edittextip"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:maxLength="15"
        android:textColor="#000000"
        android:textSize="30px" />

    <EditText
        android:id="@+id/edittextpassword"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittextip"
        android:layout_alignLeft="@+id/edittextip"
        android:ems="10"
        android:maxLength="24"
        android:password="true"
        android:textColor="#000000"
        android:textSize="30px" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="640px"
        android:layout_height="92px"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittextpassword"
        android:layout_toLeftOf="@+id/edittextpassword"
        android:text="P/W:"
        android:textColor="#000000"
        android:textSize="30px" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittextip"
        android:layout_toLeftOf="@+id/edittextip"
        android:text="I    P:"
        android:textColor="#000000"
        android:textSize="30px" />

</RelativeLayout>